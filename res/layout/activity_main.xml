<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark" >
    
     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="0dp"
         android:text="Sensorcon         Inspector"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="#7FFF00"
         android:textStyle="italic" />
     
    <EditText
        android:id="@+id/edit_message"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#DFE6D8"
        android:ems="10"
        android:gravity="center_vertical|right"
        android:hint="@string/edit_message"
        android:text="0.0"
        android:textSize="40sp"
        android:typeface="normal"
        android:editable="false"
        android:cursorVisible="false" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/edit_message"
         android:layout_below="@+id/edit_message"
         android:layout_marginTop="10dp"
         android:text="MUTE"
         android:textAppearance="?android:attr/textAppearanceSmall" 
         android:textColor="#7FFF00" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@+id/edit_message"
          android:layout_below="@+id/edit_message"
          android:layout_marginTop="10dp"
          android:text="MAX"
          android:textAppearance="?android:attr/textAppearanceSmall" 
          android:textColor="#7FFF00" />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/edit_message"
        android:layout_marginTop="10dp"
        android:text="@string/button_on" />
    
      <Button
        android:id="@+id/button2"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
		android:layout_below="@+id/textView2"
		android:layout_alignRight="@+id/edit_message"
		android:layout_marginTop="10dp"
        android:text="@string/button_max" />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button1"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="64dp"
          android:text="Hydrogen Sulfide"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="#7FFF00" />

</RelativeLayout>
